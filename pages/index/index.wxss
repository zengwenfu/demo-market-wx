/**index.wxss**/
.name {
  color: #48a0dc;
  text-align: left;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  background-color: #c0e2ec;
  padding: 5rpx 30rpx;
  box-sizing: border-box;
}
.feed-item {
  margin: 10rpx 30rpx;
}
.question {
  font-size: 32rpx;
  color: #333;
}
.answer-body {
  color: #777;
  font-size: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.arrow {
  display: inline-block;
  float: right;
  width: 30rpx;
  height: 20rpx;
  margin-right: 10rpx;
  margin-top: 16rpx;
}